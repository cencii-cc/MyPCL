                </StackPanel>
                
                <!-- 占据屏幕的提示框 -->
                <Grid x:Name="PanMsg" Grid.RowSpan="2" Background="#00000000" Visibility="Collapsed" />
            </Grid>
        </Border>
    </Grid>
</Window>
